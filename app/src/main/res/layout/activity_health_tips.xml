<!-- res/layout/activity_health_tips.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".HealthTips">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="18dp"
        android:backgroundTint="@color/white"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Quick Tips Section -->
        <TextView
            android:id="@+id/quickTipsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TitleTextStyle"
            android:text="@string/quick_tips"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/quickTipsContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ContentTextStyle"
            android:text="@string/quick_tips_content"
            app:layout_constraintTop_toBottomOf="@+id/quickTipsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_viewQuickTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/quickTipsContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/quickTipsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Add your quick tips TextViews here -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ContentTextStyle"
                    android:text="Tip 1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ContentTextStyle"
                    android:text="Tip 2" />

                <!-- Add more tips as needed -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Stress Relief Hacks Section -->
        <TextView
            android:id="@+id/stressReliefTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TitleTextStyle"
            android:text="@string/stress_relief_hacks"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll_viewQuickTips"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/stressReliefContent"
            style="@style/ContentTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stress_relief_hacks_content"
            app:layout_constraintTop_toBottomOf="@+id/stressReliefTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Nutrition Hacks Section -->
        <!-- Nutrition Hacks Section -->
        <TextView
            android:id="@+id/nutritionHacksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TitleTextStyle"
            android:text="@string/nutrition_hacks"
            app:layout_constraintTop_toBottomOf="@+id/stressReliefContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/nutritionHacksContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ContentTextStyle"
            android:text="@string/nutrition_hacks_content"
            app:layout_constraintTop_toBottomOf="@+id/nutritionHacksTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- More Health Tips Section -->
        <TextView
            android:id="@+id/moreHealthTipsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TitleTextStyle"
            android:text="@string/more_health_tips"
            app:layout_constraintTop_toBottomOf="@+id/nutritionHacksContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/moreHealthTipsContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ContentTextStyle"
            android:text="@string/more_health_tips_content"
            app:layout_constraintTop_toBottomOf="@+id/moreHealthTipsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
