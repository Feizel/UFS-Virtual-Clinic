<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quickTipsSection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/healthTipsDesc"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/quickTipsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/quick_tips"
        android:text="@string/quick_tips"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/quickTipsContent"
        style="@style/ContentTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:text="@string/quick_tips_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quickTipsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"/>
</LinearLayout>
