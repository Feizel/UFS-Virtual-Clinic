<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/healthWellnessSection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/quickTipsSection"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/health_and_wellnessTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/health_and_wellness"
        android:text="@string/health_and_wellness"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/health_wellnessContent"
        style="@style/ContentTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stress_relief_hacks_content"/>
</LinearLayout>
