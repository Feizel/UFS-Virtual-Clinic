<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sleepHygieneSection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/healthyEatingSection"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/sleepHygieneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/sleep_hygiene"
        android:text="@string/sleep_hygiene"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/sleepHygieneContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ContentTextStyle"
        android:text="@string/sleep_hygiene_content"/>

</LinearLayout>