<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/campusSafetySection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/exerciseFitnessSection"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/campusSafetyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/campus_safety"
        android:text="@string/campus_safety"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/campusSafetyContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ContentTextStyle"
        android:text="@string/campus_safety_content"/>

</LinearLayout>