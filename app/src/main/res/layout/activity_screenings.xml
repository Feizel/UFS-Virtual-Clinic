<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    tools:context=".screenings">

    <LinearLayout
        android:id="@+id/layoutBackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:padding="18dp"
            android:backgroundTint="@color/white"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_below="@+id/layoutBackButton">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/screeningsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/screenings"
                android:textSize="36sp"
                android:textColor="@color/green"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/screeningsImage"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_below="@id/screeningsTitle"
                android:src="@drawable/screenings"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/screeningsDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prescribed drugs and treatments designed for the long-term management of ongoing medical conditions. Management and dispensing of medications for chronic conditions, ensuring continuity of care."
                android:textColor="@color/grey"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_below="@+id/screeningsImage"/>

            <ListView
                android:id="@+id/listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/screeningsDesc"
                android:scrollbars="none">
            </ListView>

            <TextView
                android:id="@+id/txtFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We also offer expert care for issues affecting the ear, nose, and throat, as well as eye conditions, skin condtions &amp; sexually transmitted diseases."
                android:textColor="@color/green"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/listview"/>

            <!--        Antiretroviral (ART) medication-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/txtFooter">
                <TextView
                    android:id="@+id/info_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textColor="#1B1B1F"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="Cholesterol"/>
                <TextView
                    android:id="@+id/info_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="#1B1B1F"
                    android:textSize="18sp"
                    android:text="Cholesterol is caused by fatty food"/>
            </LinearLayout>


            <TextView
                android:id="@+id/txtBottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#1B1B1F"
                android:text="Keep an eye out for our regular health campaigns that will provide you with the necessary information to keep you in good shape."
                android:layout_below="@+id/listview"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWomenHealth"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:drawableLeft="@drawable/ic_backward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/women_health"
                android:gravity="center"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/txtBottom"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChronicMeds"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:drawableRight="@drawable/ic_forward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chronic_medication"
                android:gravity="center"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/btnWomenHealth"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>