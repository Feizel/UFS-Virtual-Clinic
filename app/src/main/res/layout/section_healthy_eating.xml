<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/healthyEatingSection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/stressManagementSection"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/healthy_eatingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/healthy_eating"
        android:text="@string/healthy_eating"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/healthy_eatingContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ContentTextStyle"
        android:text="@string/healthy_eating_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="70"
            android:gravity="start"
            android:text="LIST OF HEALTHY DISHES"
            android:textColor="#322e47"
            android:textSize="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/seeAll"
            android:layout_width="0dp"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:gravity="end"
            android:text="See All"
            android:textColor="#308fe9"
            android:textSize="16dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/courseRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"/>
</LinearLayout>