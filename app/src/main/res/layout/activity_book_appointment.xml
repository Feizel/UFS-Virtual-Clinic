<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".BookAppointment">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginTop="8dp"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:layout_gravity="start"
            android:padding="10dp"
            android:backgroundTint="@color/white"/>

        <TextView
            android:id="@+id/lblSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Appointment"
            android:textColor="@color/blue"
            android:textSize="32sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/using_computer"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To book a new appointment"
                android:textSize="22sp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose a condition from the drop down list &amp; select a time and date below:"
                android:textSize="16sp"
                android:textColor="@color/search_text"
                android:textStyle="italic"
                android:gravity="center"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/minor_ailments" />

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:text="@string/minor_ailments"
                            android:textAlignment="center"
                            android:textColor="#7E7E7E"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/chronic_medication" />

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:text="@string/chronic_medication"
                            android:textAlignment="center"
                            android:textColor="#7E7E7E"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/screenings" />

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:text="@string/screenings"
                            android:textAlignment="center"
                            android:textColor="#7E7E7E"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/womens_health" />

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:text="@string/women_health"
                            android:textAlignment="center"
                            android:textColor="#7E7E7E"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/mens_health" />

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:text="@string/mens_health"
                            android:textAlignment="center"
                            android:textColor="#7E7E7E"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/protect" />

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:text="Vaccination"
                            android:textAlignment="center"
                            android:textColor="#7E7E7E"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/first_aid" />

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:text="Injuries"
                            android:textAlignment="center"
                            android:textColor="#7E7E7E"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>


<!--            Sickness section-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select condition:"
                android:textSize="16sp"
                android:gravity="start"
                android:paddingStart="36dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/iconSickness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingEnd="8dp"
                    android:src="@drawable/icon_sickness"
                    android:background="?android:attr/selectableItemBackground"/>


                <AutoCompleteTextView
                    android:id="@+id/conditionDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Select Condition"
                    android:background="@android:drawable/btn_dropdown"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

<!--            Severity-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How serious are your symptoms? \nSelect severity:"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:paddingStart="36dp"/>

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mild"
                        app:backgroundTint="@drawable/button_toggle_background"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moderate"
                        app:backgroundTint="@drawable/button_toggle_background"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Severe"
                        app:backgroundTint="@drawable/button_toggle_background"
                        app:cornerRadius="0dp"/>
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>

<!--            Date-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Date:"
                android:textSize="16sp"
                android:gravity="start"
                android:paddingStart="36dp"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/iconCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingEnd="8dp"
                    android:src="@drawable/icon_calendar"
                    android:background="?android:attr/selectableItemBackground"/>

                <EditText
                    android:id="@+id/dateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Select Date"
                    android:background="@android:drawable/btn_dropdown"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:inputType="date"/>

            </LinearLayout>

<!--            Time-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Time:"
                android:textSize="16sp"
                android:gravity="start"
                android:paddingStart="36dp"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/iconTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingEnd="8dp"
                    android:src="@drawable/icon_time"
                    android:background="?android:attr/selectableItemBackground"/>

                <EditText
                    android:id="@+id/timeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Select Time"
                    android:background="@android:drawable/btn_dropdown"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:inputType="time"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bookAppointment"
                    app:icon="@drawable/icon_calendar"
                    app:iconGravity="textEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Book Appointment"
                    android:letterSpacing="0.1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/getHelp"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:icon="@drawable/icon_contact_us"
                    app:iconGravity="textEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:letterSpacing="0.1"
                    android:text="GET HELP"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>